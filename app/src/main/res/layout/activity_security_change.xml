<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg">

    <com.example.graduationdesign.customControl.TitleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/security_change_title"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:text="您的手机号是？"
        android:id="@+id/tv_validate_phone"
        android:layout_marginTop="15dp"
        android:layout_marginRight="35dp"
        android:layout_marginLeft="35dp" />

    <com.example.graduationdesign.customControl.SmsLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_security_change"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:text="您的原密保是:"
        android:visibility="gone"
        android:layout_marginTop="15dp"
        android:layout_marginRight="35dp"
        android:layout_marginLeft="35dp"
        android:id="@+id/tv_user_security"/>

    <EditText
        android:background="@drawable/find_psw_icon"
        android:layout_height="48dp"
        android:layout_width="fill_parent"
        android:textColor="#000000"
        android:id="@+id/et_security_change"
        android:textColorHint="#a3a3a3"
        android:singleLine="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="35dp"
        android:layout_marginLeft="35dp"
        android:paddingLeft="8dp"
        android:visibility="gone"
        android:hint="请输入修改后的密保"/>

    <Button
        android:background="@drawable/register_selector"
        android:layout_height="40dp"
        android:layout_width="fill_parent"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:text="保存"
        android:visibility="gone"
        android:layout_marginTop="15dp"
        android:layout_marginRight="35dp"
        android:layout_marginLeft="35dp"
        android:id="@+id/btn_change_security"
        android:layout_gravity="center_horizontal" />

</LinearLayout>