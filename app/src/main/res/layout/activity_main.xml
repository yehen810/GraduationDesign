<?xml version="1.0" encoding="UTF-8"?>
    <RelativeLayout
    tools:context=".MainActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:background="@android:color/white">


        <FrameLayout
            android:id="@+id/main_body"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_height="55dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="#F2F2F2"
        android:id="@+id/main_bottom_bar"
        android:layout_alignParentBottom="true">


    <RelativeLayout
        android:layout_height="fill_parent"
        android:layout_width="0dp"
        android:id="@+id/bottom_bar_home_btn"
        android:layout_weight="1">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:id="@+id/bottom_bar_text_home"
        android:layout_alignParentBottom="true"
        android:textSize="14sp"
        android:textColor="#666666"
        android:text="首页"
        android:singleLine="true"
        android:gravity="center"
        android:layout_marginBottom="3dp"
        android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/bottom_bar_image_home"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_above="@id/bottom_bar_text_home"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"
            android:src="@drawable/unselect_home_icon" />

</RelativeLayout>

    <RelativeLayout
        android:layout_height="fill_parent"
        android:layout_width="0dp"
        android:id="@+id/bottom_bar_company_btn"
        android:layout_weight="1">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:id="@+id/bottom_bar_text_company"
        android:layout_alignParentBottom="true"
        android:textSize="14sp"
        android:textColor="#666666"
        android:text="库点导航"
        android:singleLine="true"
        android:gravity="center"
        android:layout_marginBottom="3dp"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:layout_height="27dp"
        android:layout_width="27dp"
        android:id="@+id/bottom_bar_image_company"
        android:layout_centerHorizontal="true"
        android:src="@drawable/unselect_granary_icon"
        android:layout_marginTop="3dp"
        android:layout_alignParentTop="true"
        android:layout_above="@id/bottom_bar_text_company"/>

</RelativeLayout>

    <RelativeLayout
        android:layout_height="fill_parent"
        android:layout_width="0dp"
        android:id="@+id/bottom_bar_message_btn"
        android:layout_weight="1">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:id="@+id/bottom_bar_text_message"
        android:layout_alignParentBottom="true"
        android:textSize="14sp"
        android:textColor="#666666"
        android:text="价格测算"
        android:singleLine="true"
        android:gravity="center"
        android:layout_marginBottom="3dp"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:layout_height="27dp"
        android:layout_width="27dp"
        android:id="@+id/bottom_bar_image_message"
        android:layout_centerHorizontal="true"
        android:src="@drawable/unselect_message_icon"
        android:layout_marginTop="3dp"
        android:layout_alignParentTop="true"
        android:layout_above="@id/bottom_bar_text_message"/>

</RelativeLayout>

    <RelativeLayout
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:id="@+id/bottom_bar_mysl_btn"
            android:layout_weight="1">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:id="@+id/bottom_bar_text_mysl"
                android:layout_alignParentBottom="true"
                android:textSize="14sp"
                android:textColor="#666666"
                android:text="我的赣粮"
                android:singleLine="true"
                android:gravity="center"
                android:layout_marginBottom="3dp"
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:id="@+id/bottom_bar_image_mysl"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_above="@id/bottom_bar_text_mysl"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                android:src="@drawable/unselect_mysl_icon" />

        </RelativeLayout>

</LinearLayout>

</RelativeLayout>