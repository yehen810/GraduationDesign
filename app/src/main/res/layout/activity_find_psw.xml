<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout android:orientation="vertical"
    android:background="@drawable/login_bg"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    
    <com.example.graduationdesign.customControl.TitleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/find_psw_title"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="40dp"
        android:layout_width="fill_parent"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:layout_marginRight="35dp"
        android:layout_marginLeft="35dp"
        android:id="@+id/ver_switch"
        android:visibility="gone">

        <TextView
            android:background="@drawable/register_icon_normal"
            android:layout_height="40dp"
            android:layout_width="0dp"
            android:id="@+id/tv_security_ver"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:gravity="center_horizontal"
            android:text="密保验证"
            android:padding="10dp"
            android:layout_weight="1"/>

        <TextView
            android:background="@drawable/register_icon_normal"
            android:layout_height="40dp"
            android:layout_width="0dp"
            android:id="@+id/tv_phone_ver"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:gravity="center_horizontal"
            android:text="手机验证"
            android:padding="10dp"
            android:layout_weight="1"/>

    </LinearLayout>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:visibility="gone"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:text="您的用户名是？"
        android:layout_marginTop="15dp"
        android:layout_marginRight="35dp"
        android:layout_marginLeft="35dp"
        android:id="@+id/tv_user_name"/>

    <EditText
        android:background="@drawable/find_psw_icon"
        android:layout_height="48dp"
        android:layout_width="fill_parent"
        android:visibility="gone"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:layout_marginRight="35dp"
        android:layout_marginLeft="35dp"
        android:id="@+id/et_user_name"
        android:textColorHint="#a3a3a3"
        android:singleLine="true"
        android:paddingLeft="8dp"
        android:hint="请输入您的用户名"/>


    <TextView
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:text="您的姓名是？"
        android:id="@+id/tv_validate_name"
        android:layout_marginTop="15dp"
        android:layout_marginRight="35dp"
        android:layout_marginLeft="35dp"/>

    <EditText
        android:background="@drawable/find_psw_icon"
        android:layout_height="48dp"
        android:layout_width="fill_parent"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:layout_marginRight="35dp"
        android:layout_marginLeft="35dp"
        android:id="@+id/et_validate_name"
        android:textColorHint="#a3a3a3"
        android:singleLine="true"
        android:paddingLeft="8dp"
        android:hint="请输入要验证的姓名"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:text="您的新密码是？"
        android:visibility="gone"
        android:layout_marginTop="15dp"
        android:layout_marginRight="35dp"
        android:layout_marginLeft="35dp"
        android:id="@+id/tv_new_psw"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginRight="35dp"
        android:layout_marginLeft="35dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ver_psw"
        android:visibility="gone">

    <EditText
        android:background="@drawable/find_psw_icon"
        android:layout_height="48dp"
        android:layout_width="fill_parent"
        android:textSize="14sp"
        android:textColorHint="#a3a3a3"
        android:textColor="#000000"
        android:paddingLeft="8dp"
        android:inputType="textPassword"
        android:hint="请输入新密码"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/psw_icon"
        android:layout_gravity="center_horizontal"
        android:id="@+id/et_new_psw"
        android:singleLine="true"/>

    <EditText
        android:background="@drawable/find_psw_icon"
        android:layout_height="48dp"
        android:layout_width="fill_parent"
        android:textSize="14sp"
        android:textColorHint="#a3a3a3"
        android:textColor="#000000"
        android:paddingLeft="8dp"
        android:inputType="textPassword"
        android:hint="请再次输入新密码"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/psw_icon"
        android:layout_gravity="center_horizontal"
        android:id="@+id/et_new_psw_again"
        android:singleLine="true"/>

    </LinearLayout>

    <Button
        android:background="@drawable/register_selector"
        android:layout_height="40dp"
        android:layout_width="fill_parent"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:text="验证"
        android:layout_marginTop="15dp"
        android:layout_marginRight="35dp"
        android:layout_marginLeft="35dp"
        android:id="@+id/btn_validate"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:text="您的手机号是？"
        android:id="@+id/tv_validate_phone"
        android:layout_marginTop="15dp"
        android:layout_marginRight="35dp"
        android:layout_marginLeft="35dp"
        android:visibility="gone"/>

    <com.example.graduationdesign.customControl.SmsLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_find_psw"
        android:visibility="gone"/>


    <TextView
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:text="您的用户名是:"
        android:visibility="gone"
        android:layout_marginTop="15dp"
        android:layout_marginRight="35dp"
        android:layout_marginLeft="35dp"
        android:id="@+id/tv_user_name_sms"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:text="您的新密码是？"
        android:visibility="gone"
        android:layout_marginTop="15dp"
        android:layout_marginRight="35dp"
        android:layout_marginLeft="35dp"
        android:id="@+id/tv_new_psw_sms"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginRight="35dp"
        android:layout_marginLeft="35dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ver_psw_sms"
        android:visibility="gone">

    <EditText
        android:background="@drawable/find_psw_icon"
        android:layout_height="48dp"
        android:layout_width="fill_parent"
        android:visibility="visible"
        android:textSize="14sp"
        android:textColorHint="#a3a3a3"
        android:textColor="#000000"
        android:paddingLeft="8dp"
        android:inputType="textPassword"
        android:hint="请输入新密码"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/psw_icon"
        android:layout_gravity="center_horizontal"
        android:id="@+id/et_new_psw_sms"
        android:singleLine="true"/>

    <EditText
        android:background="@drawable/find_psw_icon"
        android:layout_height="48dp"
        android:layout_width="fill_parent"
        android:visibility="visible"
        android:textSize="14sp"
        android:textColorHint="#a3a3a3"
        android:textColor="#000000"
        android:paddingLeft="8dp"
        android:inputType="textPassword"
        android:hint="请再次输入新密码"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/psw_icon"
        android:layout_gravity="center_horizontal"
        android:id="@+id/et_new_psw_again_sms"
        android:singleLine="true"/>
    </LinearLayout>

    <Button
        android:background="@drawable/register_selector"
        android:layout_height="40dp"
        android:layout_width="fill_parent"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:text="手机验证"
        android:layout_marginTop="15dp"
        android:layout_marginRight="35dp"
        android:layout_marginLeft="35dp"
        android:id="@+id/btn_validate_sms2"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"/>

</LinearLayout>